{
  "name": "zgz",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "pnpm build:lib && pnpm build:app",
    "build:lib": "ng build zgz-design-system",
    "build:app": "ng build zgz-ds-showcase",
    "postbuild:lib": "pnpm generate:toc && cp README.md dist/zgz-design-system && cp LICENSE dist/zgz-design-system",
    "watch": "ng build --watch --configuration development",
    "format:check-lib": "prettier --check ./projects/zgz-design-system/src/**/*.{ts,html,scss,json,css,js}",
    "format:check-app": "prettier --check ./projects/zgz-ds-showcase/src/**/*.{ts,html,scss,json,css,js}",
    "format:check": "npm run format:check-lib && npm run format:check-app",
    "format:write-lib": "prettier --write ./projects/zgz-design-system/src/**/*.{ts,html,scss,json,css,js}",
    "format:write-app": "prettier --write ./projects/zgz-ds-showcase/src/**/*.{ts,html,scss,json,css,js}",
    "format:write": "npm run format:write-lib && npm run format:write-app",
    "git": "pnpm format:write && pnpm format:check && git add . && npx git-cz",
    "test": "ng test",
    "generate:toc": "npx doctoc ./README.md",
    "serve:ssr:zgz-ds-showcase": "node dist/zgz-ds-showcase/server/server.mjs",
    "lint": "pnpm lint:lib && pnpm lint:app",
    "lint:lib": "eslint ./projects/zgz-design-system/**/*.{ts,js} --fix",
    "lint:app": "eslint ./projects/zgz-ds-showcase/**/*.{ts,js} --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/ssr": "^18.0.1",
    "@fortawesome/angular-fontawesome": "^0.15.0",
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.1",
    "@angular-eslint/builder": "17.5.2",
    "@angular-eslint/eslint-plugin": "17.5.2",
    "@angular-eslint/eslint-plugin-template": "17.5.2",
    "@angular-eslint/schematics": "17.5.2",
    "@angular-eslint/template-parser": "17.5.2",
    "@angular/cli": "^18.0.1",
    "@angular/compiler-cli": "^18.0.0",
    "@eslint/js": "^9.3.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "all-contributors-cli": "^6.26.1",
    "eslint": "^9.3.0",
    "globals": "^15.3.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.0.0",
    "prettier": "^3.2.5",
    "typescript": "~5.4.2",
    "typescript-eslint": "^7.10.0"
  }
}